@model List<Livro>


<h2>Gerenciamento de Livro</h2>
<a asp-action="Cadastrar" class="btn btn-info">Cadastrar Livro</a>
<table class="table table-hover table-striped"
       style="margin-top:15px;margin-bottom:15px">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Autor</th>
            <th>Categoria</th>
            <th colspan="2">Prefacio</th>
            <th>Data Publicação</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Livro item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Autor</td>
                <td>@item.Categoria</td>
                <td colspan="2">@item.Prefacio</td>

                <td>@item.DataPublicacao</td>
                <td>
                    <a asp-action="Remover"
                       asp-route-id="@item.Id"
                       class="btn btn-primary">
                        Remover
                    </a>
                </td>
                <td>
                    <a asp-action="Alterar"
                       asp-route-id="@item.Id"
                       class="btn btn-danger">
                        Alterar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
