@inject Microsoft.AspNetCore.Identity.SignInManager<FuncionarioLogado> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<FuncionarioLogado> UserManager
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="background-color: #e3f2fd;">
        <a asp-action="Index" asp-controller="Home" class="navbar-brand" asp-route-id="">Livraria - Ângelo Sampaio</a>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(Página atual)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Funcionario" asp-action="Index">Funcionario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Aluno" asp-action="Index">Aluno</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Livro" asp-action="Index">Livro</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link">
                            <h5>
                                Olá, @UserManager.GetUserName(User)
                            </h5>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-action="Logout"
                           asp-controller="Funcionario">
                            <h5>Logout</h5>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-action="Login"
                           asp-controller="Home">
                            <h5>Login</h5>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    @* Conteúdo *@
    <div class="m-5">
        @RenderBody()
    </div>
    @* Rodapé *@
    <footer>
        <hr />
        <p style="text-align:center">
            &copy; @DateTime.Now.Year -
            Desenvolvido por Equipe MRD
        </p>
    </footer>
</body>
</html>
